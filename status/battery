if [ -d "/sys/class/power_supply/BAT1" ]; then
  capacity=$(cat /sys/class/power_supply/BAT1/capacity)
  status=$(cat /sys/class/power_supply/BAT1/status)

  case "$status" in
    "Full") echo "" ;;
		"Discharging") echo "" $capacity ;;
		"Charging") echo "" $capacity ;;
  esac

else
  echo ""
fi
